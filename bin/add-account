#!/bin/bash

if [[ $# -lt 3 ]]; then
  echo "Usage: add-user USERNAME PASSWORD MOUNT_POINT [VOL_SIZE_MB]"
  exit 1
fi

# Add the user
adduser -S -H -G root $1
echo $1:$2 | chpasswd

# Create mountpoint
mkdir -p $3
chown -R $1:root $3

# Add config to timemachine
  echo "
[${1}]
    path = ${3}
    time machine = yes
    spotlight = no
    valid users = ${1}" >> /etc/afp.conf

if [[ $# -eq 4 ]]; then
  echo "
    vol size limit = ${4}" >> /etc/afp.conf
fi

pkill -HUP afpd
exit 0
